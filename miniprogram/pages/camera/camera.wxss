/* pages/camera/camera.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  background-color: #000;
}

.back-button {
  position: absolute;
  top: 20px;
  left: 20px;
  z-index: 10;
}

.camera-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.camera {
  width: 100%;
  height: 100%;
}

.circle-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200px;
  height: 200px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
}